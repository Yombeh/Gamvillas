@model WhiteLagoon.Domain.Entities.Villa



<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2> Delete Villa  </h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
            </div>
            <div class="form-floating py-2 col-12">
                <div asp-validation-summary="ModelOnly"></div>
                <input asp-for="Name" disabled class="form-control border shadow" />
                <label asp-for="Name" class=""></label>
               
            </div>

            <div class="form-floating py-2 col-12">

                <input asp-for="Description" disabled class="form-control border shadow" />
                <label asp-for="Description" class=""></label>
               
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="Price" disabled class="form-control border shadow" />
                <label asp-for="Price" class=""></label>
               
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Sqft" disabled class="form-control border shadow" />
                <label asp-for="Sqft" class=""></label>
               
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Occupancy" disabled class="form-control border shadow" />
                <label asp-for="Occupancy" class=""></label>
             

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ImageUrl" disabled class="form-control border shadow" />
                <label asp-for="ImageUrl" class=""></label>
            
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">

                    <button type="submit" class="btn btn-success w-100">
                        <i class=" bi-trash-fill"></i> Delete
                    </button>

                </div>
                <div class="col-6 col-md-3">
                    <button asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                        <i class=" bi-x-circle"></i> Cancel
                    </button>



                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
